{
	"name": "creative-coding",
	"version": "1.0.0",
	"description": "Creative coding projects with p5.js and TypeScript",
	"main": "src/main.ts",
	"type": "module",
	"packageManager": "bun@1.3.0",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"knip": "knip",
		"knip:fix": "knip --fix",
		"typecheck": "tsc",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui"
	},
	"dependencies": {
		"p5": "2.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@playwright/test": "1.56.1",
		"@types/node": "24.8.1",
		"@types/p5": "1.7.6",
		"knip": "5.66.0",
		"typescript": "5.9.3",
		"vite": "7.1.10"
	}
}
